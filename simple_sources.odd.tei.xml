  <text>
    <body>
      <schemaSpec ident="simple_sources" start="TEI" defaultExceptions="http://www.tei-c.org/ns/1.0" prefix="tei_" targetLang="en" docLang="en">

        <moduleRef key="tei"/>
        <moduleRef key="core"/>
        <moduleRef key="header"/>
        <moduleRef key="textstructure"/>
        <moduleRef key="corpus"/>
        <moduleRef key="msdescription"/>
        <moduleRef key="namesdates"/>
        <moduleRef key="transcr"/>
        <moduleRef key="analysis"/>
        <moduleRef key="textcrit"/>
        <moduleRef key="certainty"/>
        <moduleRef key="figures"/>
        <moduleRef key="gaiji"/>
        <moduleRef key="linking"/>
        <moduleRef key="iso-fs"/>

        <elementSpec ident="hi" mode="change">
          <attList>
            <attDef ident="rend" mode="change">
              <valList type="semi" mode="change">
                <valItem mode="add" ident="sup"/>
                <valItem mode="add" ident="sub"/>
                <valItem mode="add" ident="italic"/>
                <valItem mode="add" ident="underline"/>
                <valItem mode="add" ident="center"/>
                <valItem mode="add" ident="sc"/>
                <valItem mode="add" ident="grid"/>
                <valItem mode="add" ident="large"/>
                <valItem mode="add" ident="rev"/>
                <valItem mode="add" ident="flip"/>
                <valItem mode="add" ident="turnover"/>
                <valItem mode="add" ident="turnunder"/>
              </valList>
            </attDef>
          </attList>
        </elementSpec>

        <classSpec ident="att.datcat" type="atts" mode="delete"/>

      </schemaSpec>
    </body>
  </text>
</TEI>
